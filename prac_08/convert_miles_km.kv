BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.3
        TextInput:
            id: input_km
            text: 'Input KM'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
            Button:
                text: 'Down'
    Button:
        size_hint_y: 0.5
        text: 'Convert Kilometers to Miles'
        on_press: app.handle_km_input()

    Label:
        id: output_miles
        size_hint_y: 0.5
        color: (1,1,0,1)
        text: 'Miles'
