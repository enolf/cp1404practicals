BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.3
        TextInput:
            id: input_m
            text: 'Input km'
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.toggle_input(1)
            Button:
                text: 'Down'
                on_press: app.toggle_input(-1)
    Button:
        size_hint_y: 0.5
        text: 'Convert Kilometers to Miles'
        on_press: app.handle_m_input()

    Label:
        id: output_km
        size_hint_y: 0.5
        color: (1,1,0,1)
        text: 'Miles'
